<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/second_preferences"
    android:orientation="vertical" >

    <Spinner
        android:id="@+id/interval_spinner"
        android:background="@drawable/interval_app"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp" />

    <Spinner
        android:id="@+id/battery_limit_spinner"
        android:background="@drawable/battery_limit_app"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="5dp" />

    <Spinner
        android:id="@+id/travel_time_spinner"
        android:background="@drawable/travel_time_app"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="5dp" />
	
    <Spinner
        android:id="@+id/max_distance_spinner"
        android:background="@drawable/max_distance_app"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="5dp"/>
    
<!--     <Button
        android:id="@+id/maxDistanceButton"
        android:background="@drawable/max_distance_app"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="@string/max_distance_button_text" />
 -->
    <Button
        android:id="@+id/messageContentButton"
        android:background="@drawable/message_content_app"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:text="@string/message_content_button_text" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/showValuesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="2"
            android:text="@string/show_values" />
    </LinearLayout>

</LinearLayout>